<div class="post-detail">
  <h2>{{post.title}}</h2>
  <p>{{post.content}}</p>
  <p>Posted By: {{post.user.username}}</p>
  <p>on: {{post.createdAt}}</p>

  {{!-- Display comments for the post --}}
  <div class="comments">
    <h3>Comments:</h3>
    {{#each post.comments}}
      <div class="comment">
        <p>{{this.content}}</p>
        <p>Commented By: {{this.user.username}}</p>
        <p>on: {{this.createdAt}}</p>
      </div>
    {{/each}}
  </div>
</div>